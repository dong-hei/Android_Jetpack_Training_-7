<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/putStrArea"
        android:layout_margin="10dp"
        android:hint="putStr" />

    <Button
        android:id="@+id/putStrBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="putStrBtn" />

    <Button
        android:id="@+id/getStrBtn"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="getStrBtn" />

    <Button
        android:id="@+id/trueBtn"
        android:layout_margin="20dp"
        android:background="#E1C4C4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="trueBtn" />

    <Button
        android:id="@+id/falseBtn"
        android:background="#E1C4C4"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="getStrBtn" />

    <Button
        android:id="@+id/getBooleanBtn"
        android:background="#E1C4C4"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="getBooleanBtn" />

</LinearLayout>